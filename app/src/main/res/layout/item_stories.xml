<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.red_velvet.marvel.data.model.StoryResponse" />

        <variable
            name="listener"
            type="com.red_velvet.marvel.ui.base.BaseInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/story_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:imageUrl="@{item.thumbnail}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="@{item.title}"
                app:layout_constraintBottom_toBottomOf="@id/image_item"
                app:layout_constraintStart_toStartOf="@id/image_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>