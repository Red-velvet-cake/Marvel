<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <data>
      <variable
          name="viewModel"
          type="com.red_velvet.marvel.ui.serieDetails.SerieDetailsViewModel" />
      <variable
          name="listener"
          type="com.red_velvet.marvel.ui.serieDetails.adapter.CreatorListenerInteraction" />
   </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/background">


      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycler_view_serie_creators"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          creators="@{viewModel.creators.toData()}"
          android:layout_margin="@dimen/spacing_medium"
          android:orientation="horizontal"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:listitem="@layout/item_creator" />
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>